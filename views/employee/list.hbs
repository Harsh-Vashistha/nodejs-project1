<h3><a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i>Create New</a> LIST</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.mobile}}</td>
        <td>{{this.city}}</td>
        <td>
            <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
            <a><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
        </td>
        {{/each}}
    </tbody>
</table>